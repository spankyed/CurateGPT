{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "lib": ["dom", "esnext"],
    "sourceMap": true,                       
    "outDir": "./build",
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"],
      "@config": ["../../config.ts"]
    },
    "allowSyntheticDefaultImports": true // This allows default imports from modules with no default export
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
  },
  "include": [
    "../config.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}